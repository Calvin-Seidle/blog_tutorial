<% @posts.each do |post| %>
	<div class="post_wrapper">
		<h2 class="title"> <%= link_to post.title, post %></h2>
		<p class="date"> <%= post.created_at.strftime("%d %B %Y") %></p>
		<% if post.comments.any? %>
		<p date="date"> <%= post.comments.count %> Comment(s) | <%= link_to 'View Comments', post %></p>
		<% end %>
	</div>
<% end %>